{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "outDir": "./dist",
    "lib": ["es2022"],
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@libs/*": ["src/libs/*"],
      "@database/*": ["database/*"],
      "@tests/*": ["tests/*"]
    }
  }
}
